<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Gambar Artikel -->
        <ImageView
            android:id="@+id/article_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_place_holder"
            android:contentDescription="Gambar Artikel" />

        <!-- Konten Artikel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Judul Artikel -->
            <TextView
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Artikel"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <!-- Konten Pendek Artikel -->
            <TextView
                android:id="@+id/article_content_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konten singkat artikel akan ditampilkan di sini untuk memberikan gambaran."
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <!-- Tanggal Artikel -->
            <TextView
                android:id="@+id/article_created_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dibuat pada"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
